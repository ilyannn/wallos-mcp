{
  "name": "wallos-mcp",
  "version": "0.1.0",
  "description": "MCP server for Wallos subscription management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun run tsc --project tsconfig.build.json",
    "dev": "bun --watch src/index.ts",
    "start": "bun dist/index.js",
    "start:local": "bun src/index.ts",
    "test": "bun test",
    "lint": "bun eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "bun eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "bun prettier --write 'src/**/*.ts' '**/*.md' '**/*.json' '**/*.yaml' '**/*.yml' --ignore-path .gitignore",
    "format:check": "bun prettier --check 'src/**/*.ts' '**/*.md' '**/*.json' '**/*.yaml' '**/*.yml' --ignore-path .gitignore",
    "typecheck": "bun tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "mcp",
    "wallos",
    "subscriptions",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "axios-cookiejar-support": "^6.0.4",
    "dotenv": "^16.3.1",
    "tough-cookie": "^4.1.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "bun-types": "^1.2.20",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
